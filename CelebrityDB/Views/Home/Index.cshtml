@model IEnumerable<CelebrityDB.Models.Celebrity>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h2><strong>Celebrities</strong></h2>
    <h3>
        <span>
            @using (Html.BeginForm("Index", "Home", FormMethod.Get))
            {        <b> Search By: </b>@Html.RadioButton("SearchBy", "StageName", true) <text>Name</text>     @Html.RadioButton("SearchBy", "Gender") <text>Gender</text> <br />


            @Html.TextBox("search")<input type="submit" value="Search" />

            }
        </span>
    </h3>
</div>
@if (Model.Count() == 0)
{

    <div>
        <span class="wobble">
            <h3>Sorry !  No one of that entry is employed by us.  Try again...</h3>
            <img width="300" height="300"src="~/Content/emoji.png" />
        </span>
    </div>

}
else
{

    <div class="wrapper_inside">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RealName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HeightCategory)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeePicture)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RealName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HeightCategory)
                    </td>
                    <td>
                        <div>
                            <img class="img-rounded" width="150" height="150" src="data:image;base64,@System.Convert.ToBase64String(item.EmployeePicture)" />
                        </div>
                    </td>
                    <td>

                        @Html.ActionLink("View Profile", "Details", new { id = item.Id })

                    </td>
                </tr>
            }
        </table>
    </div>

}
</div>